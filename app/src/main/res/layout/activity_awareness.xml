<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/awareness"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_page"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="53dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/durgobondhulogo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/text" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="#282828"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/needhelp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D7D5D5"
            android:text="Need Help"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/awareness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFF"
            android:text="Awareness"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/sendassis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#D7D5D5"
            android:text="Send Assistance"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pp4"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MD Rubel"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Location: Pahartali, Narayanganj, Bangladesh" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Signs in Gollamari, Rajshahi, suggest that an earthquake could potentially occur. In the past few hours, we've experienced unusual ground vibrations that don’t seem to be caused by local construction. Several people have reported strange, low rumbling sounds coming from the ground, and pets and animals are behaving erratically, often signs of seismic activity. Additionally, we’ve noticed small cracks forming in the ground and walls, which seem to be expanding slightly over time. Given the region’s geological fault lines and recent reports of mild tremors nearby, these signs might indicate a potential earthquake. Please be cautious and alert emergency services if you notice similar signs"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/earthquake" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="#666666"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/checkmark" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/remove"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comments"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/share1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textAlignment="center"
                    android:textSize="15sp"/>

            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="#666666"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                >

                <ImageView
                    android:id="@+id/imageView110"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pp3"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView81"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Akteruzzaman"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Location: N/A" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView110"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Unusual signs in and around the Bay of Bengal suggest a possible tsunami. Over the past few hours, the sea level has unexpectedly receded far from the shore, exposing areas of the seafloor that are usually underwater. People have reported observing strange, rapid shifts in wave patterns and an unusual roar coming from the ocean. Additionally, some coastal animals have been moving inland, which can be a reaction to changing oceanic pressures associated with tsunamis. Given recent seismic activity in nearby regions, these signs may indicate a potential tsunami. Please move to higher ground if you’re in a coastal area and alert others to stay safe."
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <ImageView
                android:id="@+id/imageView123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tsunami" />


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="#666666"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView140"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/checkmark" />

                <ImageView
                    android:id="@+id/imageView150"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/remove"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/textView130"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comments"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/share2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textAlignment="center"
                    android:textSize="15sp"/>

            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="#666666"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                >

                <ImageView
                    android:id="@+id/imageView111"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pp3"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView80"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Himesh Reshammiya"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Location: House 79, Road 22, Gollamari, Chittagong, Bangladesh" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Conditions in Dhaka suggest an approaching heatwave. Over the past few days, we've noticed consistently high temperatures with no significant cooling at night, which is a common precursor to a heatwave. Meteorologists have reported a high-pressure system stalled over the region, trapping heat and preventing cloud formation. This system blocks cooler air and intensifies solar radiation, creating a ‘heat dome’ effect that leads to prolonged high temperatures. Humidity levels are also rising, reducing the body’s ability to cool itself through sweating, which can increase the risk of heat-related illnesses. Please take precautions: stay hydrated, avoid outdoor activities during peak hours, and check on vulnerable individuals. It’s essential to remain alert as conditions could worsen."
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <ImageView
                android:id="@+id/imageView120"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/heatwave" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="#666666"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView141"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/checkmark" />

                <ImageView
                    android:id="@+id/imageView151"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    app:srcCompat="@drawable/remove"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/textView131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comments"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/share3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textAlignment="center"
                    android:textSize="15sp"/>

            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="#666666"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>


    </ScrollView>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#282828" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/newsfeed"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/newsfeed" />

        <ImageView
            android:id="@+id/danger"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/danger" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add" />

        <ImageView
            android:id="@+id/friends"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/friends" />

        <ImageView
            android:id="@+id/myprofile"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profileuser" />

    </LinearLayout>



</LinearLayout>